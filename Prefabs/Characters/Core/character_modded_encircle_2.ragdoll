

// "bone bonename, simulated (true / false) [, mass]"
// put the bone in the character.
// simulated determines whether it should be physically simulated or just virtual
// mass is the mass and MUST be specified if simulated = true

// "addbone bonename, offset, simulated [, mass]"
// add internal bone to the character. It's a way to add geometry to the end bone

// geometry bone1, bone2, radius
// adds capsule geometry between bone1 and bone2 about radius diameter.

#define JOINT_DAMPER 0.25
#define JOINT_STIFF 10
#define HUMANOID_MATERIAL "{DA94EA1EF2914EB7}Common/Materials/Game/flesh.gamemat"

//sixdofjoint "PitchY YawX RollZ", loX, hiX, loY, hiY, loZ, hiZ, stiff, damp


//torso & head
bone "hips", true, 1.4
{
	bone "Spine3", true, 1.4 //THIS is the mass value
	{
		sixdofjoint "0 0 0", -20, 20, -20, 20, -10, 10, 4, JOINT_DAMPER

		bone "Head", true, 1.025
		{
			sixdofjoint "0 0 0", -35, 35, -45, 45, -30, 30, 100 , JOINT_DAMPER
			addbone "HeadTerm", "0 0.1 0", false
		}

		//mixed left hand
		bone "leftArm", true, 1.07
		{
			sixdofjoint "0 0 0", -90, 15, -10, 10, -5, 5, 4 , JOINT_DAMPER
	

			bone "LeftForeArm", true, 1.1
			{
				sixdofjoint "0 0 0", -30, 10, -40, 20, 0, 0, 4 , JOINT_DAMPER

				bone "LeftHandMiddle1", false
			}
		}

		//mixed right hand
		bone "RightArm", true, 1.07
		{
			sixdofjoint "-0 -0 -0", -90, 15, -10, 10, -5, 5, 4 , JOINT_DAMPER

			bone "RightForeArm", true, 1.1
			{
				sixdofjoint "-0 0 -0", -30, 10, -40, 20, 0, 0, 4 , JOINT_DAMPER

				bone "RightHandMiddle1", false
			}
		}
	}
// the axis of the joint in the thigh is 45 'forward and about 20' inward. Thanks to us cone-limit
// keep your feet at the right angles

//sixdofjoint "PitchY YawX RollZ", loX, hiX, loY, hiY, loZ, hiZ, stiff, damp
	bone "leftleg", true, 2.2
	{
		sixdofjoint "0 0 0", -10, 13, -10, 10, -5, 25, 1 , JOINT_DAMPER

		bone "leftknee", true, 2.15
		{
			sixdofjoint "0 0 0", -20, 10, -52, 2, -30, 20, 1 , JOINT_DAMPER

			bone "leftfoot", true, 2.05
			{
				fixedjoint
				bone "lefttoe", false
			}
		}
	}

	bone "rightleg", true, 2.2
	{
		sixdofjoint "0 0 0", -10, 13, -10, 10, -5, 25, 1 , JOINT_DAMPER

		bone "rightknee", true, 2.15
		{
			sixdofjoint "0 0 0", -20, 10, -52, 2, -30, 20, 1 , JOINT_DAMPER

			bone "rightfoot", true, 2.05
			{
				fixedjoint
				bone "righttoe", false
			}
		}
	}
}

geometry "hips", "Spine3", 0.15, HUMANOID_MATERIAL
geometry "Spine3", "Head", 0.14, HUMANOID_MATERIAL
geometry "Head", "HeadTerm", 0.010, HUMANOID_MATERIAL

geometry "LeftArm", "LeftForeArm", 0.03, HUMANOID_MATERIAL
geometry "LeftForeArm", "LeftHandMiddle1", 0.015, HUMANOID_MATERIAL
geometry "RightArm", "RightForeArm", 0.03, HUMANOID_MATERIAL
geometry "RightForeArm", "RightHandMiddle1", 0.015, HUMANOID_MATERIAL

geometry "LeftLeg", "LeftKnee", 0.008, HUMANOID_MATERIAL
geometry "RightLeg", "RightKnee", 0.008, HUMANOID_MATERIAL
geometry "LeftKnee", "LeftFoot", 0.006, HUMANOID_MATERIAL
geometry "RightKnee", "RightFoot", 0.006, HUMANOID_MATERIAL

geometry "RightFoot", "RightToe", 0.03, HUMANOID_MATERIAL
geometry "LeftFoot", "LeftToe", 0.03, HUMANOID_MATERIAL

block "LeftLeg", "Spine3"
block "RightLeg", "Spine3"